@using OgrenciNotMvc.Models.EntityFramework
@model List<TblDersler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ders Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.DersId</td>
                <td>@x.DersAd</td>
                <td><a href="/Default/DersSil/@x.DersId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Default/DersGuncelle/@x.DersId" class="btn btn-primary">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Default/DersEkle/" class="btn btn-primary">Yeni Ders Ekle</a>